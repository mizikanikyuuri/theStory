{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "jsx": "react",
    "lib": [
      "dom",
      "es2020"
    ],
    "baseUrl": "./",
    "paths": {
      "Utilities/*": ["./js/Utilities/*"],
      "Components/*": ["./js/components/*"],
      "GameRules/*": ["./js/GameRules/*"]
    }
  },
  "include": [
    "node_modules",
    "js"
  ],
  "compileOnSave": false,
}